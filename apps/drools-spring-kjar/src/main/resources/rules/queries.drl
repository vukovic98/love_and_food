query "getAllUsers"
    $user: User()
	$averageRating: Double(doubleValue >= 0.0) from accumulate(
		Match(soulmate == $user, rating > 0,
		$rating: rating),
		average($rating)
	)
end
query "getAllMatches"
    $match: Match()
end

query "getAllMatchesForUser"(String email)
    $match: Match(initiator.email == email)
end

