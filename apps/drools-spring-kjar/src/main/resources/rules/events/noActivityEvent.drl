package rules;

import com.ftn.uns.ac.rs.love_and_food.event.FindMatchEvent;
import com.ftn.uns.ac.rs.love_and_food.model.User;

rule "No activity from user in the past week"
	agenda-group "user-activity-event"
	when
		$u: User($id: id)
		not (FindMatchEvent(initiator.id == $id))
    then
    	System.out.println("WARNING: The user " + $u.getEmail()+  " has been inactive in the past week.");
end;
